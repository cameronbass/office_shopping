<%= link "Existing Items", to: items_path(@conn, :index), class: "button" %>

<%= form_for @changeset, items_path(@conn, :create), fn f -> %>
  <label>
    Name: <%= text_input f, :name %>
  </label>

  <label>
    Price: <%= text_input f, :price %>
  </label>

  <label>
    Quantity: <%= select f, :quantity, 1..100 %>
  </label>

  <%= submit "Submit" %>
<% end %>
